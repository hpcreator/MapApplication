<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.MyApplication" parent="Theme.Material3.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorOnPrimary">@color/colorOnPrimary</item>

        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorOnSecondary">@color/colorOnSecondary</item>

        <item name="android:statusBarColor">@color/statusBarColor</item>
        <item name="android:navigationBarColor">@color/colorTransparent</item>
    </style>

    <style name="Theme.AppSplashScreen" parent="Theme.SplashScreen">
        // Set the splash screen background.
        <item name="windowSplashScreenBackground">@color/colorPrimary</item>
        // Set any animated or static app icon
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_launcher_foreground</item>
        <item name="windowSplashScreenIconBackgroundColor">@color/white</item>
        <item name="windowSplashScreenAnimationDuration">300</item>
        // Set the theme of the Activity that directly follows your splash screen.
        <item name="postSplashScreenTheme">@style/Theme.MyApplication</item>
    </style>

    <style name="defaultButtonStyle" parent="Widget.Material3.Button">
        <item name="android:textSize">18sp</item>
        <item name="textAllCaps">false</item>
        <item name="cornerRadius">10dp</item>
        <item name="android:paddingHorizontal" tools:targetApi="o">10dp</item>
        <item name="android:paddingVertical" tools:targetApi="o">10dp</item>
        <item name="minHeight">0dp</item>
        <item name="minWidth">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
    </style>
</resources>